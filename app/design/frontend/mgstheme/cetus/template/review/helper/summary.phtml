<?php $_snippets = Mage::getStoreConfig('mgs_theme/general/snippets'); ?>
<div class="rating rating-category" <?php if($_snippets == 1): ?> itemtype="http://schema.org/AggregateRating" itemscope itemprop="aggregateRating" <?php endif; ?>>
<?php if ($this->getReviewsCount()): ?>
    <?php if ($this->getRatingSummary()):?>
        <div class="rating-box">
            <div class="ratings" style="width:<?php echo $this->getRatingSummary() ?>%">
            	<?php if($_snippets == 1): ?>
                	<span itemprop="ratingValue"><?php echo $this->getRatingSummary()/20; ?></span> stars, based on <span itemprop="reviewCount"><?php echo $this->getReviewsCount() ?>
					  </span> reviews
				<?php endif; ?>
            </div>
        </div>
    <?php endif;?>
    <p class="rating-links hidden-quickview">
        <a href="#product_tabs"><?php echo $this->__('%d Review(s)', $this->getReviewsCount()) ?></a>
        <span class="separator">|</span>
        <a href="#product_tabs"><?php echo $this->__('Add Your Review') ?></a>
    </p>
<?php elseif ($this->getDisplayIfEmpty()): ?>
    <p class="rating-links no-rating hidden-quickview"><a href="#product_tabs"><?php echo $this->__('Be the first to review this product') ?></a></p>
<?php endif; ?>
</div>