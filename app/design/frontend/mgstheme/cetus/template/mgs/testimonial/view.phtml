<?php $collection = $this->getTestimonials() ?>
<?php 
	if($this->getViewMode()){
		$viewMode = $this->getViewMode();
	}
	else{
		$viewMode = 'grid';
	}
?>
<?php if(count($collection)>0): ?>
	<div class="testimonial-container block">
		<?php if($this->getTitle()!=''): ?>
			<div class="block-title">
				<h2 class="title-name"><?php echo $this->getTitle() ?></h2>
			</div>
		<?php endif ?>
		<?php if($viewMode=='grid'): ?>
			<div class="owl-carousel testimonials-carousel block-content" data-plugin-options="{'items': 1, 'autoHeight': true, 'controlNav': true }" id="testimonials-carousel">
