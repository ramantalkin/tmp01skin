							</div>
						<?php endif;?>
							
						</div>
						<div class="testimonial-content">
							<div class="testimonial-icon"><i class="fa fa-quote-left"></i></div>
							<div class="desc">
								<?php echo $_item->getContent() ?>
								<p class="name-super"><?php echo $this->__('By ') ?><strong><?php echo $_item->getName() ?></strong><span><?php echo $_item->getInformation() ?></span></p>
							</div>
						</div>
					</div>
				<?php endforeach ?>
			</div>
		
		<script type="text/javascript">
			initSlider('testimonials-carousel', 1, false, false, false, true);
